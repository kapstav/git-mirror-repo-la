{
	"name": "siberia-aws-middleware",
	"version": "0.1.0",
	"private": true,
	"description": "Siberia AWS middleware using serverless framework",
	"license": "UNLICENSED",
	"author": "lane@allgold.com",
	"scripts": {
		"es": "node -r esbuild-runner/register -r dotenv/config",
		"check-aws-params": "pnpm run es packages/scripts/src/aws-parameters/env-variables",
		"precommit": "lint-staged && pnpm type-check && CI=true pnpm test",
		"commit": "npx git-cz",
		"generate-types": "graphql-codegen --config codegen.yml",
		"generate-types-unstable": "graphql-codegen --config codegen.unstable.yml",
		"postinstall": "husky install",
		"klaviyo": "pnpm run es packages/scripts/src/klaviyo/enableEmailCampaigns.ts",
		"lint": "turbo run package:lint --go-fallback --no-daemon",
		"build": "turbo run package:build --go-fallback --no-daemon",
		"packages:changed": "lerna changed -a --toposort  --ignore-changes '**/package.json'",
		"packages:changed:development": "lerna changed -a --toposort --include-merged-tags",
		"packages:deploy": "lerna run deploy --",
		"packages:remove": "lerna run remove --",
		"packages:version:major": "lerna version major --yes",
		"packages:version:minor": "lerna version minor --yes --ignore-changes '**/package.json'",
		"packages:version:patch": "lerna version patch --yes --ignore-changes '**/package.json'",
		"packages:version:prepatch": "lerna version prepatch --yes --ignore-changes '**/package.json'",
		"packages:version:changelog": "lerna version --conventional-commits --yes  --no-commit-hooks --no-push -m 'chore(release): publish'",
		"preinstall": "npx only-allow pnpm",
		"stage:deploy": "bash ./packages/scripts/src/deployment/deploy.sh",
		"stage:remove": "bash ./packages/scripts/src/deployment/remove.sh",
		"test": "turbo run package:test:unit  --go-fallback --no-daemon",
		"test:int": "turbo run test:int --force",
		"test:coverage": "turbo run package:test:unit:coverage  --go-fallback --no-daemon",
		"test:coverage:report": "pnpm run es packages/scripts/src/jest/getAndCombineCoverageFiles.ts",
		"test:debug": "jest /parseFulfillmentCsv.unit.test.ts --silent --maxWorkers=1 --isolateModules=true",
		"test:watch": "jest unit.test.ts --watch",
		"type-check": "turbo run package:type-check --go-fallback --no-daemon",
		"type-check:watch": "pnpm run type-check --watch",
		"clean:removeOrders": "pnpm run es packages/scripts/adHocScripts/shopify/deleteAllOrders.ts",
		"clean:removeProducts": "pnpm run es packages/scripts/adHocScripts/shopify/deleteAllProducts.ts",
		"clean:resetInventory": "pnpm run es packages/scripts/src/products/updateInventory.ts",
		"clean:checkInventory": "pnpm run es packages/scripts/src/products/checkInventory.ts",
		"clean:purgeQueues": "pnpm run es packages/scripts/src/aws-queues/sqs",
		"clean:emptyS3Buckets": "pnpm run es packages/scripts/src/s3/empty-s3-buckets",
		"clean:emptyDynamoDB": "pnpm run es packages/scripts/src/dynamodb/clearAllTables.ts",
		"clean:emptyOpenSearch": "pnpm run es packages/scripts/src/open-search/clear-indices.ts",
		"clean:dropEventBridgeRules": "pnpm run es packages/scripts/src/maintenance/drops-clean-eventbridge-rules.ts",
		"clean:dropLambdaPolicies": "pnpm run es packages/scripts/src/maintenance/drops-clean-lambda-policies.ts",
		"createUpdateCognitoUser": "pnpm run es packages/scripts/src/users/createUpdateUser.ts",
		"check:quotas": "pnpm run es packages/scripts/src/aws-service-quotas/check-service-quotas.ts",
		"check:emails": "pnpm run es packages/scripts/src/aws-ses/verify-emails.ts",
		"check:eventbridge": "pnpm run es packages/scripts/src/setup-eventbridge-subscriptions/setupEventbridgeSubscriptions.ts",
		"synthetics:runAll": "pnpm run es packages/scripts/src/cloudwatch/synthetics/runAllCanaries.ts",
		"report:releaseNotes": "pnpm --silent run es packages/scripts/src/jira/get-tickets.ts"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"dependencies": {
		"@apollo/client": "3.3.21",
		"conventional-changelog-conventionalcommits": "4.6.3",
		"source-map-support": "0.5.21"
	},
	"devDependencies": {
		"@graphql-codegen/add": "2.0.2",
		"@graphql-codegen/cli": "2.2.2",
		"@graphql-codegen/introspection": "1.18.2",
		"@graphql-codegen/typescript": "1.23.0",
		"@graphql-codegen/typescript-compatibility": "2.1.5",
		"@graphql-codegen/typescript-operations": "1.18.4",
		"@graphql-codegen/typescript-resolvers": "1.20.0",
		"@types/node": "16.18.10",
		"commitizen": "4.2.5",
		"cz-conventional-changelog": "3.3.0",
		"dotenv": "16.0.3",
		"esbuild": "0.14.11",
		"esbuild-runner": "2.2.1",
		"eslint-plugin-sny": "workspace:^1.6.3",
		"graphql": "15.8.0",
		"husky": "8.0.3",
		"lerna": "8.0.2",
		"lint-staged": "15.2.0",
		"turbo": "^1.10.16",
		"typescript": "4.7.4"
	}
}
